{
    "name": "mortezamasumi/method-overrider",
    "description": "A PHP package to override methods.",
    "keywords": [
        "php",
        "overriding",
        "methods"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Rumpel",
            "email": "christoph@christoph-rumpel.com"
        }
    ],
    "require": {
        "php": "^8.3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17.3",
        "pestphp/pest": "^3.0.7",
        "pestphp/pest-plugin-type-coverage": "^3.0",
        "phpstan/phpstan": "^1.12.4",
        "rector/rector": "^1.2.5",
        "symfony/var-dumper": "^7.1.4"
    },
    "autoload": {
        "psr-4": {
            "MortezaMasumi\\MethodOverrider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "pint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --parallel --min=100",
        "test": [
            "@test:refacto",
            "@test:pint",
            "@test:types",
            "@test:unit"
        ]
    }
}
